<div class="max-w-md border-1 drop-shadow-lg bg-white rounded hover:bg-gray-50 mx-auto">
  <%= link_to category_path(category.id) do %>
    <div class="grid grid-cols-12 p-2 py-3 gap-y-2">
      <div class="col-span-2">
        <img class="object-cover w-18 max-w-24 max-h-24 rounded-xl" src="<%= url_for(category.icon) %>" alt="<%= category.name %>">
      </div>
      <div class="col-span-7 ml-2 flex flex-col justify-center">
        <h3 class="text-gray-600 text-xl"><%= category.name %></h3>
        <p class="text-gray-400"><%= category.created_at.strftime("%d %b %Y") %></p>
      </div>
      <div class="flex col-start-auto mx-auto justify-center items-center flex-col text-right">
        <p class="text-gray-400"> Expenses </p>
        <p class="rounded text-slate-500 font-semibold w-max"><%= category_sum(category.invoices)%> </p>
      </div>
    </div>
  <% end %>
</div>
