<div class="flex flex-col items-center justify-center h-screen ">
  <%= image_tag 'logo-blue.png', alt: 'cashFlo', style: 'width:300px;' %>
  <div class="my-16 flex flex-col items-center justify-center w-80 mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {"data-turbo": "false", class: 'w-full'}) do |f| %>
      <h1 class="font-bold text-center mb-6 text-2xl text-slate-500">Sign In</h1>
      <div class="w-full rounded-2xl bg-gray-50 ring-2 ring-gray-200 my-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'w-full px-4 rounded-2xl border-none bg-gray-50 outline-none focus:outline-none' %>
      </div>
      <div class="w-full flex items-center rounded-2xl bg-gray-50 ring-2 ring-gray-200 my-4">
        <%= f.password_field :password, autocomplete: "password", placeholder: 'Password', class: 'w-full px-4 rounded-2xl border-none bg-gray-50 outline-none focus:outline-none' %>
        <%= link_to "Forgot?", new_user_password_path, class: "text-gray-400 hover:text-gray-500 px-2" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: 'rounded mr-2' %>
          <%= f.label :remember_me, class:'text-gray-500 hover:text-gray-600' %>
        </div>
      <% end %>
      <div class="actions my-4">
        <%= f.submit "Sign in", class: "w-full rounded-2xl border-b-4 border-b-blue-600 bg-blue-500 py-2 mb-4 font-bold text-white hover:bg-blue-400 active:translate-y-[0.125rem] active:border-b-blue-400" %>
      </div>
    <% end %>
    <div class="flex items-center space-x-4 w-full">
      <hr class="w-full border border-gray-300" />
      <div class="font-semibold text-gray-400 w-96 text-center">No account?</div>
      <hr class="w-full border border-gray-300" />
    </div>
    <%= link_to "Sign up", new_user_registration_path, class: "w-80 rounded-2xl border-b-4 border-b-blue-500 bg-blue-400 py-2 my-4 font-bold text-white text-center hover:bg-blue-300 active:translate-y-[0.125rem] active:border-b-blue-300" %><br />
  </div>
</div>
