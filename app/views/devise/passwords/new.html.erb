<div class="flex flex-col items-center justify-center h-screen ">
  <%= image_tag 'logo-blue.png', alt: 'cashFlo', style: 'width:300px;' %>
  <div class="my-16 flex flex-col items-center justify-center w-80 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post, class: 'w-full' }) do |f| %>
      <h1 class="font-bold text-center mb-6 text-2xl text-slate-500">Forgot Password?</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="w-full rounded-2xl bg-gray-50 ring-2 ring-gray-200 my-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'w-full px-4 rounded-2xl border-none bg-gray-50 outline-none focus:outline-none' %>
      </div>
      <div class="actions my-4">
        <%= f.submit "Send Reset Password Instructions", class: "w-full rounded-2xl border-b-4 border-b-blue-600 bg-blue-500 py-2 mb-4 font-bold text-white hover:bg-blue-400 active:translate-y-[0.125rem] active:border-b-blue-400" %>
      </div>
    <% end %>
    <div class="flex items-center space-x-4 w-full">
      <hr class="w-full border border-gray-300" />
      <div class="font-semibold text-gray-400 w-36 text-center">Or</div>
      <hr class="w-full border border-gray-300" />
    </div>
    <%= link_to "Sign Up", new_user_registration_path, class: "w-80 rounded-2xl border-b-4 border-b-blue-500 bg-blue-400 py-2 my-4 font-bold text-white text-center hover:bg-blue-300 active:translate-y-[0.125rem] active:border-b-blue-300" %>
    <%= link_to "Sign In", new_user_session_path, class: "w-80 rounded-2xl border-b-4 border-b-blue-500 bg-blue-400 py-2 my-4 font-bold text-white text-center hover:bg-blue-300 active:translate-y-[0.125rem] active:border-b-blue-300" %>
  </div>
</div>
