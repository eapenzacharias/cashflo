<div class="container mb-12 items-center justify-center mx-auto pb-10 pt-24">
  <div class="my-16 flex flex-col items-center justify-center w-80 mx-auto">
    <h1 class="font-bold text-center mb-6 text-2xl text-slate-500">New Category</h1>
    <%= form_with model: @category, url: categories_path, local: true, html: {"data-turbo": "false", class: 'w-full'} do |form| %>
      <% if @category.errors.any? %>
        <div class="border px-7 py-3 mb-4 border-red-400 bg-red-200 font-medium">
          <% @category.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
        </div>
      <% end %>
      <div class="flex flex-col gap-7">
        <div class="w-full rounded-2xl bg-gray-50 ring-2 ring-gray-200 my-4">
          <%= form.text_field :name, placeholder: 'Category Name', required: true, class: 'w-full px-4 rounded-2xl border-none bg-gray-50 outline-none focus:outline-none' %>
        </div>
        <div class='flex items-center justify-center w-full'>
          <label class="flex flex-col items-center justify-center border-2 rounded-2xl border-dashed w-full h-32 hover:bg-gray-300 hover:border-blue-300 group">
            <div class='flex flex-col items-center justify-center pt-7'>
              <svg class="w-10 h-10 text-blue-400 group-hover:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class='text-sm text-gray-400 group-hover:text-blue-600 pt-1 tracking-wider'>Select an Icon</p>
            </div>
            <%= form.file_field :icon, required: true, class: 'mx-auto text-sm text-slate-500 px-4 file:hidden' %>
          </label>
        </div>
        <%= form.submit "Submit", class: "w-full rounded-2xl border-b-4 border-b-blue-500 bg-blue-400 py-2 my-4 font-bold text-white text-center hover:bg-blue-300 active:translate-y-[0.125rem] active:border-b-blue-300" %>
      </div>
    <% end %>
  </div>
</div>
